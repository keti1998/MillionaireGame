      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MillionaireGame.UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AuthorizationPage" Height="400" Width="600">

    <Grid  Height="329" Width="230">
        <TextBox x:Name="textboxlogin" Height="30" Width="200" Margin="15,0,15,60" TextAlignment="Center" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Button x:Name="buttonSignIn" Content="Sign In" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25"  Width="90" Margin="70,0" Cursor="Hand"/>
    </Grid>
</Page>
